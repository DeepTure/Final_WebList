<!DOCTYPE html>
<html>
    <head>
        <title>WebList</title>
        <meta name="viewport" content="width=device-width, user-scalable=no" />
        <link rel="stylesheet" type="text/css" href="../public/CSS/sheet.css" />
        <link
            rel="stylesheet"
            type="text/css"
            media="screen and (prefers-color-scheme: no-preference)"
            href="../public/CSS/lightColorSheet.css"
        />
        <link
            rel="stylesheet"
            type="text/css"
            media="screen and (prefers-color-scheme: light)"
            href="../public/CSS/lightColorSheet.css"
        />
        <link
            rel="stylesheet"
            type="text/css"
            media="screen and (prefers-color-scheme: dark)"
            href="../public/CSS/darkColorSheet.css"
        />
        <link
            rel="stylesheet"
            type="text/css"
            media="screen"
            href="../public/CSS/navSheet.css"
        />
        <link
            rel="stylesheet"
            type="text/css"
            media="screen"
            href="../public/CSS/timerSheet.css"
        />
        <script
            src="https://code.jquery.com/jquery-3.6.0.js"
            integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
            crossorigin="anonymous"
        ></script>
        <link rel="icon" href="../public/IMG/DeepTure.ico" />
        <link rel="shortcut icon" href="../public/IMG/DeepTure.ico" />

        <meta charset="utf-8" />
    </head>
    <body>
        <style type="text/css">
            @media (min-width: 600px) {
                #navbar.active {
                    width: 25rem;
                }
            }
        </style>
        <nav class="addShadow" id="header">
            <article class="addLeftMargin">
                <img src="../public/IMG/WebListLogo.png" class="navImg" />
                <p class="titleFont addLeftMargin alignMiddle">
                    WebList Project
                </p>
            </article>

            <div class="navImg" id="toggle"></div>
            <div class="navImg" id="navbar">
                <ul>
                    <li>
                        <a href="/home/perfil"> Mi perfil </a>
                    </li>
                    <li>
                        <a href="/home/historial"> Graficas </a>
                    </li>
                    <li>
                        <a href="/"> Cerrar sesión </a>
                    </li>
                    <li>
                        <a href="/home/modify/help"> Ayuda </a>
                    </li>
                </ul>
            </div>
        </nav>
        <script src="../public/JS/nav.js"></script>

        <div>
            <section class="defaultSectionSize autoManageSpaced addShadow">
                <!-- Izquierda -->
                <section class="squareSectionSizeLW addTopMarginAlt">
                    <p class="titleFont addTopMarginAlt centerText">
                        Datos del usuario <%= dataToSend.nombre%>
                    </p>

                    <p
                        class="
                            bodyFont
                            addTopMargin
                            addLeftMargin
                            addRightMargin
                            centerText
                            dashedBorder
                            fillSpaceAlt
                            submit
                        "
                    >
                        <br /><br />
                        Matricula (ID): <%= dataToSend.id_empleado%>
                        <br /><br />
                        Nombre: <%= dataToSend.nombre%>
                        <br /><br />
                        Apellido paterno: <%= dataToSend.app%>
                        <br /><br />
                        Apellido materno: <%= dataToSend.apm%>
                        <br /><br />
                        Rol: <%= dataToSend.rol%>
                        <br /><br />
                    </p>
                    <br />
                </section>

                <!-- Derecha -->
                <section class="squareSectionSizeLW addTopMarginAlt">
                    <p
                        class="
                            titleFont
                            centerText
                            addLeftMarginAlt
                            addTopMarginAlt
                        "
                    >
                        Modificar datos del usuario
                    </p>

                    <br />

                    <aside class="addLeftMarginAlt">
                        <br />

                        <aside class="autoManageSpacedAlways">
                            ID
                            <br />
                            <%if(dataToSend.id_empleado === undefined){%>
                            <p id="aid"><%=dataToSend.boleta%></p>
                            <% }else{%>
                            <p id="aid"><%=dataToSend.id_empleado%></p>
                            <%}%>
                        </aside>

                        <br />

                        <aside class="autoManageSpacedAlways">
                            Nombre
                            <br />
                            <input
                                class="smallInput"
                                type="text"
                                id="aname"
                                name="name"
                                placeholder="Nombre"
                                value="<%= dataToSend.nombre%>"
                            />
                        </aside>

                        <br />

                        <aside class="autoManageSpacedAlways">
                            Apellido paterno
                            <br />
                            <input
                                class="smallInput"
                                type="text"
                                id="alastf"
                                name="lastName"
                                placeholder="Apellido paterno"
                                value="<%= dataToSend.app%>"
                            />
                        </aside>

                        <br />

                        <aside class="autoManageSpacedAlways">
                            Apellido materno
                            <br />
                            <input
                                class="smallInput"
                                type="text"
                                name="lastName1"
                                id="alastm"
                                placeholder="Apellido materno"
                                value="<%= dataToSend.apm%>"
                            />
                        </aside>

                        <br />

                        <aside class="autoManageSpacedAlways">
                            Rol
                            <br />
                            <p id="arol"><%= dataToSend.rol%></p>
                        </aside>

                        <br />
                        <% if(dataToSend.rol == "Profesor"){%>
                        <section id="otherDataProfesor">
                            <aside class="autoManageSpacedAlways">
                                Clase(s) que imparte
                                <br />
                            </aside>
                            <br />
                            <aside class="autoManageSpacedAlways">
                                <input
                                    class="buttonInput blue"
                                    id="addMat"
                                    type="button"
                                    name="addM"
                                    value="Añadir materia"
                                />
                                <br />
                                <input
                                    class="buttonInput red"
                                    id="quitMat"
                                    type="button"
                                    name="quitM"
                                    value="Quitar materia"
                                />
                            </aside>
                            <br />
                            <section id="MatElement"></section>
                        </section>
                        <% } else { %>
                        <section id="otherDataAlumno">
                            <aside class="autoManageSpacedAlways">
                                Grupos incritos
                                <br />
                            </aside>
                            <br />
                            <aside class="autoManageSpacedAlways">
                                <input
                                    class="buttonInput blue"
                                    id="addGrp"
                                    type="button"
                                    name="addG"
                                    value="Añadir grupo"
                                />
                                <br />
                                <input
                                    class="buttonInput red"
                                    id="quitGrp"
                                    type="button"
                                    name="quitG"
                                    value="Quitar grupo"
                                />
                            </aside>
                            <br />
                            <section id="GrpElement"></section>
                        </section>
                        <% } %>
                        <br />
                    </aside>

                    <input
                        class="buttonInput addLeftMarginAlt blue"
                        type="button"
                        id="updUser"
                        name="sent"
                        value="Modificar"
                    />
                </section>
            </section>
        </div>
        <input id="unknownData" value="<%= JSON.stringify(dataToSend)%>" />
        <script src="public/JS/modifyControlls.js"></script>
    </body>
</html>
